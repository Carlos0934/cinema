
{
    "importMap": "import_map.json",
    "tasks": {
        "start:scraping" : "deno run --allow-net --allow-read --allow-write  --allow-run   --allow-env scraping/src/main.ts",
        "start" : "deno run --allow-net --allow-read --allow-write   --allow-env api/src/main.ts"
    },
    "compilerOptions": {
      "allowJs": true,
      "lib": ["deno.window", "DOM"],
      "strict": true
    },

    "lint": {
        "files": {
          "include": ["scraping/src/"]
       
        },
        "rules": {
          "tags": ["recommended"],
          "include": ["ban-untagged-todo"],
          "exclude": ["no-unused-vars"]
        }
      },
      "fmt": {
        "files": {
          "include": ["scraping/src/"]
         
        },
        "options": {
          "useTabs": true,
          "lineWidth": 80,
          "indentWidth": 4,
          "singleQuote": true,
          "proseWrap": "preserve"
        }
      }

}